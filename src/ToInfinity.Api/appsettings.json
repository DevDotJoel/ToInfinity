{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JWTSettings": {
    "securityKey": "REPLACE_WITH_SECURE_KEY_256_BITS_MINIMUM",
    "validIssuer": "https://api-toinfinity.com",
    "validAudience": "https://toinfinity.com",
    "expiryInDays": 1
  },
  "ConnectionStrings": {
    "DefaultConnection": "REPLACE_WITH_PRODUCTION_CONNECTION_STRING"
  },
  "Azure": {
    "Storage": "REPLACE_WITH_PRODUCTION_AZURE_STORAGE_CONNECTION_STRING"
  },
  "WebApp": {
    "FrontendPublicUrl": "https://toinfinity.com",
    "BackendPublicUrl": "https://api-toinfinity.com",
    "BackendHost": "api-toinfinity.com",
    "FrontendHost": "toinfinity.com"
  },
  "Google": {
    "ClientId": "REPLACE_WITH_PRODUCTION_GOOGLE_CLIENT_ID",
    "ClientSecret": "REPLACE_WITH_PRODUCTION_GOOGLE_CLIENT_SECRET"
  },
  "Stripe": {
    "ApiKey": "REPLACE_WITH_STRIPE_API_KEY"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "POST:/api/auth/login",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "POST:/api/auth/register",
        "Period": "5m",
        "Limit": 3
      },
      {
        "Endpoint": "POST:/api/auth/refresh",
        "Period": "1m",
        "Limit": 10
      },
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      }
    ]
  }
}
